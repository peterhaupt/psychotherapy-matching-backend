# Copy this file to .env and update with your values

# Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=therapy_platform
DB_HOST=postgres
DB_PORT=5432

# PgBouncer Configuration
PGBOUNCER_HOST=pgbouncer
PGBOUNCER_PORT=6432
PGBOUNCER_ADMIN_USER=your_db_user
PGBOUNCER_ADMIN_PASSWORD=your_secure_password

# Service Ports
PATIENT_SERVICE_PORT=8001
THERAPIST_SERVICE_PORT=8002
MATCHING_SERVICE_PORT=8003
COMMUNICATION_SERVICE_PORT=8004
GEOCODING_SERVICE_PORT=8005
SCRAPING_SERVICE_PORT=8006

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9093
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_SUPPORTS_CREDENTIALS=true

# Email Configuration (Communication Service)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
EMAIL_SENDER=noreply@example.com
EMAIL_SENDER_NAME=Therapy Platform

# Geocoding Configuration
OSM_API_URL=https://nominatim.openstreetmap.org
OSM_USER_AGENT=TherapyPlatform/1.0
OSM_TIMEOUT=10
OSM_MAX_RETRIES=3
OSM_RATE_LIMIT=1.0
OSRM_API_URL=https://router.project-osrm.org
OSRM_PROFILE_CAR=car
OSRM_PROFILE_TRANSIT=foot
CACHE_TTL_SECONDS=2592000
CACHE_MAX_SIZE=1000

# Frontend Configuration
REACT_APP_USE_MOCK_DATA=false
REACT_APP_PATIENT_API=http://localhost:8001/api
REACT_APP_THERAPIST_API=http://localhost:8002/api
REACT_APP_MATCHING_API=http://localhost:8003/api
REACT_APP_COMMUNICATION_API=http://localhost:8004/api
REACT_APP_GEOCODING_API=http://localhost:8005/api

# Security Keys (generate strong random values for production)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Feature Flags
ENABLE_SCRAPING=true
ENABLE_EMAIL_SENDING=true
ENABLE_PHONE_SCHEDULING=true

# Scraping Service Configuration (if using separate scraping service)
SCRAPING_BUCKET_NAME=therapy-scraping-data
SCRAPING_BUCKET_REGION=eu-central-1
SCRAPING_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Monitoring and Logging
SENTRY_DSN=
ENABLE_PERFORMANCE_MONITORING=false

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_LIFETIME_MINUTES=1440
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Development Tools (disable all in production)
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
SQL_ECHO=false

# Anfrage (Inquiry) Configuration - PHASE 4 ADDITIONS
# Maximum number of patients per therapist inquiry (default: 6)
MAX_ANFRAGE_SIZE=6

# Minimum number of patients per therapist inquiry (default: 1, was 3 in bundle system)
MIN_ANFRAGE_SIZE=1

# Number of PLZ (postal code) digits to match for therapist selection (default: 2)
# Example: With 2 digits, PLZ 10115 would match all therapists in 10xxx
PLZ_MATCH_DIGITS=2